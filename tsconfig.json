{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "types": ["node"],
    "jsx": "react-jsx",
    "declaration": true,
    "emitDeclarationOnly": true,
    // "outDir": "./dist", // 修改为与 Rollup 输出路径一致
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
